Question 16: How to Show this result based on the given details:

True-answers=6
Wrong -answers=0
Total-questions=6
source code:
import 'package:flutter/material.dart';

void main() {
  runApp(const MaterialApp(
    home: ResultScreen(),
    debugShowCheckedModeBanner: false,
  ));
}

class ResultScreen extends StatelessWidget {
  const ResultScreen({super.key});

  @override
  Widget build(BuildContext context) {
    // Given details
    int trueAnswers = 6;
    int wrongAnswers = 0;
    int totalQuestions = 6;

    // Logic for result
    bool isPassed = trueAnswers == totalQuestions;
    double percentage = (trueAnswers / totalQuestions) * 100;

    return Scaffold(
      appBar: AppBar(
        title: const Text("Quiz Result"),
        centerTitle: true,
        backgroundColor: Colors.blueAccent,
      ),
      body: Center(
        child: Container(
          padding: const EdgeInsets.all(20),
          decoration: BoxDecoration(
            borderRadius: BorderRadius.circular(20),
            color: Colors.white,
            boxShadow: const [
              BoxShadow(
                color: Colors.grey,
                blurRadius: 10,
                offset: Offset(0, 5),
              ),
            ],
          ),
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Image.asset(
                isPassed
                    ? 'assets/images/success.png'
                    : 'assets/images/failure.png',
                height: 150,
              ),
              const SizedBox(height: 20),
              Text(
                isPassed ? "üéâ Congratulations!" : "‚ùå Try Again!",
                style: const TextStyle(
                  fontSize: 26,
                  fontWeight: FontWeight.bold,
                  color: Colors.black87,
                ),
              ),
              const SizedBox(height: 20),
              Text(
                "True Answers: $trueAnswers\nWrong Answers: $wrongAnswers\nTotal Questions: $totalQuestions",
                textAlign: TextAlign.center,
                style: const TextStyle(fontSize: 18, color: Colors.black54),
              ),
              const SizedBox(height: 20),
              Text(
                "Your Score: ${percentage.toStringAsFixed(0)}%",
                style: TextStyle(
                  fontSize: 22,
                  fontWeight: FontWeight.bold,
                  color: isPassed ? Colors.green : Colors.red,
                ),
              ),
            ],
          ),
        ),
      ),
      backgroundColor: Colors.blue[50],
    );
  }
}
